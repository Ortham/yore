{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "module": "es6",
        "target": "es6",
        "jsx": "react",
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "baseUrl": ".",
        "paths": {
            "pig.js/src/pig.js": ["node_modules/pig.js/src/pig.js"]
        }
    },
    "include": [
        "./src/**/*"
    ]
}
